<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">


    <activity
        android:id="@+id/UserHomePageActivity"
        android:name="com.example.veiditorg.UserHomepageActivity"
        tools:layout="@layout/activity_user_homepage"/>
    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.veiditorg.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.veiditorg.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />

        <action
            android:id="@+id/action_SecondFragment_to_UserHomepageActivity"
            app:destination="@+id/UserHomePageActivity"/>
        <action
            android:id="@+id/action_SecondFragment_to_SignupFragment"
            app:destination="@+id/SignupFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/SignupFragment"
        android:name="com.example.veiditorg.SignupFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_signup"
        />

</navigation>